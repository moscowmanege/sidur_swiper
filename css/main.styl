html, body
	position relative
	height 100%

body
	background-color black
	color #000
	margin 0
	padding 0

.swiper-container
	width 100%
	height 100%
	background-color black

.swiper-slide
	background-position center
	background-size contain
	background-repeat no-repeat

.swiper-button
	position absolute
	width 80px
	height @width
	border-radius @width
	z-index 999
	&:after
		content ''
		display block
		position absolute
		background-color white
		width 10px
		height @width
		border-radius @width
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		border 1px solid black
	&.right
		top 50%
		right 0
		margin-top -(@height/2)
	&.left
		top 50%
		left 0
		margin-top -(@height/2)
	&.up
		top 0
		left 50%
		margin-left -(@width/2)
	&.down
		bottom 0
		left 50%
		margin-left -(@width/2)